            ["Aliases"] = {"antiiso"},
            ["Function"] = function(args, speaker)
                local arg = tostring(args[1]):lower()
                if arg == "on" then

                elseif arg == "off" then
                    
                else
                    notify("Invalid argument. Do (on/off)")
                end
            end
        }
    }
}